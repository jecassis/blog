{
  "name": "blog",
  "description": "A blog.",
  "keywords": [],
  "homepage": "https://github.com/jecassis/blog",
  "bugs": "https://github.com/jecassis/blog/issues",
  "license": "MIT",
  "version": "0.1.0",
  "author": "Kernel Oops <KernelOops@outlook.com> (https://oops.now.sh/)",
  "main": "index.tsx",
  "repository": "github:jecassis/blog",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "now-build": "next build",
    "deploy": "now && now alias oops",
    "pkg": "git add --patch -- package.json && git checkout -- package.json"
  },
  "dependencies": {
    "@mdx-js/loader": "^1.6.16",
    "@next/mdx": "^9.5.2",
    "axios": "^0.19.2",
    "comma-number": "^2.0.1",
    "date-fns": "^2.11.1",
    "firebase": "^7.18.0",
    "firebase-admin": "^9.1.0",
    "gray-matter": "^4.0.2",
    "ms": "^2.1.2",
    "next": "^9.5.2",
    "next-mdx-remote": "^1.0.0",
    "nprogress": "^0.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-is": "^16.13.1",
    "react-youtube": "^7.11.1",
    "remark": "^12.0.0",
    "remark-html": "^12.0.0",
    "request-ip": "^2.1.3",
    "styled-components": "^5.1.1"
  },
  "devDependencies": {
    "@types/node": "^14.6.0",
    "@types/react": "^16.9.46",
    "@types/youtube": "^0.0.39",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "@vercel/node": "^1.7.4",
    "babel-eslint": "^10.1.0",
    "babel-plugin-styled-components": "^1.11.1",
    "eslint": "^7.7.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
  },
  "engines": {
    "node": "12.x"
  },
  "private": true,
  "babel": { "presets": ["next/babel"], "plugins": ["styled-components"] },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb",
      "prettier",
      "prettier/react"
    ],
    "globals": {
      "document": true,
      "window": true,
      "process": true,
      "localStorage": true,
      "requestAnimationFrame": true
    },
    "rules": {
      "arrow-parens": ["error", "always"],
      "indent": ["error", 4],
      "max-len": "off",
      "no-unused-vars": "warn",
      "object-curly-newline": ["error", { "ObjectExpression": { "consistent": true }, "ObjectPattern": { "multiline": true }, "ImportDeclaration": "never", "ExportDeclaration": { "multiline": true } }],
      "import/extensions": "off",
      "import/no-extraneous-dependencies": "off",
      "import/no-unresolved": "off",
      "jsx-a11y/anchor-is-valid": "off",
      "jsx-a11y/label-has-for": "off",
      "react/destructuring-assignment": "off",
      "react/jsx-filename-extension": "off",
      "react/jsx-indent": ["error", 4],
      "react/jsx-indent-props": ["error", 4],
      "react/jsx-one-expression-per-line": "off",
      "react/jsx-props-no-spreading": ["error", { "html": "enforce", "custom": "ignore", "exceptions": [] }],
      "react/no-danger": "off"
    }
  },
  "eslintIgnore": [
    "*.min.js"
  ],
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "rangeStart": 0,
    "requirePragma": false,
    "insertPragma": false,
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "strict",
    "endOfLine": "lf",
    "overrides": [
      { "files": "*.yml", "options": { "tabWidth": 2 } },
      { "files": "*.yaml", "options": { "tabWidth": 2 } },
      { "files": "*.json", "options": { "tabWidth": 2 } },
      { "files": "*.graphql", "options": { "tabWidth": 2 } },
      { "files": "*.webmanifest", "options": { "parser": "json", "tabWidth": 2 } }
    ]
  }
}
