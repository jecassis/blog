{
  "name": "blog",
  "description": "A blog.",
  "keywords": [],
  "homepage": "https://github.com/jecassis/blog",
  "bugs": "https://github.com/jecassis/blog/issues",
  "license": "MIT",
  "version": "0.2.1",
  "author": "Kernel Oops <KernelOops@outlook.com> (https://oops.now.sh/)",
  "repository": "github:jecassis/blog",
  "scripts": {
    "dev": "next --port $PORT",
    "build": "next build",
    "preview": "vercel",
    "deploy": "vercel --prod",
    "alias": "vercel alias oops.<scope>.vercel.app oops.now.sh",
    "lint": "eslint \"**/*.{ts,tsx}\" --quiet",
    "lint:check": "npx eslint-config-prettier pages/index.tsx",
    "pretty": "prettier --write \"**/*\" \"!.gitignore\"",
    "pretty:check": "prettier --check \"**/*\" \"!.gitignore\"",
    "pkg": "git add --patch -- package.json && git checkout -- package.json"
  },
  "dependencies": {
    "comma-number": "^2.0.1",
    "date-fns": "^2.19.0",
    "encoding": "^0.1.13",
    "firebase": "^8.2.10",
    "firebase-admin": "^9.5.0",
    "gray-matter": "^4.0.2",
    "ms": "^2.1.3",
    "next": "^10.0.8",
    "nprogress": "^0.2.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "remark": "^13.0.0",
    "remark-html": "^13.0.1",
    "request-ip": "^2.1.3",
    "sharp": "0.27.2",
    "webpack": "^5.24.3"
  },
  "devDependencies": {
    "@types/node": "^14.14.31",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "@vercel/node": "^1.9.0",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  },
  "private": true,
  "babel": { "presets": ["next/babel"] },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json",
      "sourceType": "module"
    },
    "extends": ["airbnb-typescript", "plugin:prettier/recommended"],
    "plugins": ["@typescript-eslint", "react-hooks"],
    "globals": {
      "document": true,
      "window": true,
      "process": true,
      "localStorage": true,
      "requestAnimationFrame": true,
      "fetch": true
    },
    "rules": {
      "arrow-parens": ["error", "always"],
      "indent": ["error", 4],
      "max-len": "off",
      "no-unused-vars": "warn",
      "object-curly-newline": ["error", {
        "ObjectExpression": { "multiline": true, "consistent": true },
        "ObjectPattern": { "multiline": true, "consistent": true },
        "ImportDeclaration": { "multiline": true, "consistent": true },
        "ExportDeclaration": { "multiline": true, "consistent": true }
      }],
      "semi": "off",
      "no-use-before-define": "off",
      "import/extensions": "off",
      "import/no-extraneous-dependencies": "off",
      "import/no-unresolved": "off",
      "jsx-a11y/anchor-is-valid": "off",
      "jsx-a11y/label-has-for": "off",
      "react/destructuring-assignment": "off",
      "react/jsx-filename-extension": "off",
      "react/jsx-indent": ["error", 4],
      "react/jsx-indent-props": ["error", 4],
      "react/jsx-one-expression-per-line": "off",
      "react/jsx-props-no-spreading": ["error", { "html": "enforce", "custom": "ignore", "exceptions": [] }],
      "react/no-danger": "off",
      "react/require-default-props": "off",
      "@typescript-eslint/no-use-before-define": "error"
    }
  },
  "eslintIgnore": [
    "/*types/"
  ],
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "rangeStart": 0,
    "requirePragma": false,
    "insertPragma": false,
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "strict",
    "endOfLine": "lf",
    "overrides": [
      { "files": "*.md", "options": { "tabWidth": 2 } },
      { "files": "*.json", "options": { "tabWidth": 2 } },
      { "files": "*.webmanifest", "options": { "parser": "json", "tabWidth": 2 } }
    ]
  }
}
